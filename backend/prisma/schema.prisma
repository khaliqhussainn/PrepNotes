generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Note {
  id        String   @id @default(cuid())
  title     String
  fileUrl   String
  year      String
  subject   String
  course    String
  type      String
  folder    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([year])
  @@index([type])
}